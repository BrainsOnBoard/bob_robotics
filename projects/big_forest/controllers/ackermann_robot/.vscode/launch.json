    "version": "0.2.0",
    "configurations": [
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/build/ackermann_robot",
            "args" : ["5", "big_forest/route_zigzag1"],
            "initCommands": ["set cuda single_stepping_optimizations","set cuda memcheck on"]
        },
        {
            "name": "CUDA C++: Attach",
            "type": "cuda-gdb",
            "request": "attach"
        }
    ]
}
